{
  "minicart": {
    "allowed": ["sandbox", "product-summary"],
    "component": "index"
  },
  "estilos-minicart2": {
    "component": "Minicart",
    "composition": "children"
  },
  "estilos-minicart-base-content": {
    "component": "BaseContent",
    "allowed": [
      "estilos-minicart-product-list",
      "estilos-minicart-summary",
      "estilos-minicart-empty-state"
    ],
    "composition": "children",
    "render": "lazy"
  },
  "estilos-minicart-product-list": {
    "component": "ProductList",
    "allowed": ["product-list"]
  },
  "estilos-minicart-checkout-button": {
    "component": "CheckoutButton",
    "content": {
      "title": "store/finish-shopping-button-label",
      "properties": {
        "finishShoppingButtonLink": {
          "type": "string",
          "title": "admin/editor.minicart.linkButtonFinishShopping.title",
          "default": "/checkout/#/cart"
        }
      }
    }
  },
  "estilos-minicart-summary": {
    "component": "Summary",
    "allowed": ["checkout-summary"],
    "render": "lazy"
  },
  "estilos-minicart-empty-state": {
    "component": "EmptyState",
    "composition": "children",
    "render": "lazy"
  }
}
